<div id="InfoGeneral">
	<!-- Sección del eslogan-->
	<section class = "container" id="start" style="min-width: 500px;">
		<div class="panel panel-default" style="width:70%">
			<div class="panel heading">
				<h2>Eslogan</h2>
			</div>
			<div class="form-group">
				<!-- Puede ir el eslogan actual acá-->
				<input type="text" class="form-control" id="usr">
				<button class="btn btn-default" type="submit">Actualizar</button>
			</div>
		</div>
	</section>

	<!--Seccion ACERCA DE-->
	<section class = "container" id="acerca_de" style="min-width: 500px;">
		<div class="panel panel-default" style="width:70%">
			<div class="panel heading">
				<h2>Acerca de:</h2>
			</div>
			<div class="form-group">
				<label for="usr">Cambiar Sección «Acerca de Nosotras»</label>
				<textarea class="form-control" id="AcercaDe" rows="2"></textarea>
				<button class="btn btn-default" type="submit">Actualizar</button>
			</div>
		</div>
	</section>

	<!--Container content-->
	<section class = "container" id="contacto" style="min-width: 500px;">
		<div class="panel panel-default" style="width:70%">
			<div class="panel heading">
				<h2>Contacto:</h2>
			</div>
			<div class="row">
				<div class="col-sm-4">
					Dirección:<br>
					<input type="text" class="form-control" id="dir" style="float:left;width:30%;min-width:200px">
					<button class="btn btn-default" type="submit" style="float:left;">Actualizar</button>
				</div>
				<div class="col-sm-4">
					Teléfono:<br>
					<input type="text" class="form-control" id="tel" style="float:left;width:30%;min-width:200px">
					<button class="btn btn-default" type="submit" style="float:left;">Actualizar</button>
				</div>
				<div class="col-sm-4">
					Correo:<br>
					<input type="text" class="form-control" id="mail" style="float:left;width:30%;min-width:200px">
					<button class="btn btn-default" type="submit" style="float:left;">Actualizar</button>
				</div>
			</div>
			<div class="row">
				<div class="col-sm-4">
					Ciudad:<br>
					<input type="text" class="form-control" id="ciudad" style="float:left;width:30%;min-width:200px">
					<button class="btn btn-default" type="submit" style="float:left;">Actualizar</button>
				</div>
				<div class="col-sm-4">
					Red Social 1:<br>
					<input type="text" class="form-control" id="socnet" style="float:left;width:30%;min-width:200px">
					<button class="btn btn-default" type="submit" style="float:left;">Actualizar</button>
				</div>
				<div class="col-sm-4">
					Red Social 2:<br>
					<input type="text" class="form-control" id="socnet2" style="float:left;width:30%;min-width:200px">
					<button class="btn btn-default" type="submit" style="float:left;">Actualizar</button>
				</div>
			</div>
		</div>
	</section>
</div>
